<%-include('../includes/header.ejs')%>
<title>
    <%=title%>
</title>
</head>
<body>
    <%-include('../includes/navbar.ejs')%>
    <main>
        <h1 class="text-center text-success fw-bold mt-4">Add Product</h1>
        <div class="mt-5 mb-5 mx-4">
            <form action="/postproductdata" method="POST" enctype="multipart/form-data" autocomplete="off">
                <div class="mb-3">
                  <label for="productName" class="form-label">Product Name</label>
                  <input type="text" class="form-control" name="productName" id="productName">
                </div>
                <div class="mb-3">
                    <label for="productPrice" class="form-label">Product Price</label>
                    <input type="number" class="form-control" name="productPrice" id="productPrice">
                </div>
                <div class="mb-3">
                    <label for="productImage" class="form-label">Product Image</label>
                    <input type="file" class="form-control" name="productImage" id="productImage">
                </div>
                <button type="submit" class="btn btn-primary">Add Product</button>
              </form>
        </div>
    </main>