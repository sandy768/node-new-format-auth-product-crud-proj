<%-include('../includes/header.ejs')%>
<title>
    <%=title%>
</title>
</head>
<body>
    <%-include('../includes/navbar.ejs')%>
    <main>
        <h1 class="text-center text-success mt-5 mb-5 fw-bold">Sign Up</h1>
        <div class="mt-3 mb-5 mx-4">
            <form action="/user/postregdata" method="POST" enctype="multipart/form-data" autocomplete="off">
                <div class="mt-3 mb-3">
                    <p class="text-danger fs-6"><%=successRegis%></p>
                </div>
                <div class="mb-3">
                    <p class="text-danger fs-6"><%=errorReg%></p>
                </div>
                <div class="mb-3">
                    <p class="text-danger fs-6"><%=errorVerify%></p>
                </div>
                <div class="mb-3">
                    <p class="text-danger fs-6"><%=errorToken%></p>
                </div>
                <div class="mb-3">
                  <label for="username" class="form-label">Name</label>
                  <input type="text" class="form-control" name="username" id="username">
                </div>
                <div class="mb-3">
                    <div>
                        <label for="gender" class="form-label">Gender</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="gender" value="male">
                        <label class="form-check-label" for="gender">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="gender" value="female">
                        <label class="form-check-label" for="gender">Female</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="gender" value="others">
                        <label class="form-check-label" for="gender">Others</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password">
                </div>
                <div class="mb-3">
                    <label for="user_image" class="form-label">Upload Images (Upto two)</label>
                    <input type="file" class="form-control" name="user_image" id="user_image" multiple>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <input type="submit" class="btn btn-lg btn-success" value="Register">
                </div>
              </form>
        </div>
    </main>